<Window x:Class="RickVowens.EditWindows.WindowAddContainProduction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RickVowens.EditWindows"
        mc:Ignorable="d"
        Title="Добавления содержимого производства" Icon="D:\3 курс\RickVowens\imgs\icon.png" Height="450" Width="800">
    <Grid>
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="0, 10">Название:</TextBlock>
            <ComboBox Name="cbNamesShoes" SelectedValue="{Binding Articul}" SelectedValuePath="Articul" DisplayMemberPath="Name">
            </ComboBox>
            <TextBlock Margin="0, 10">Количество:</TextBlock>
            <TextBox Text="{Binding CountOfProduct}">
            </TextBox>
            <Button Width="120" Height="35" Margin="0, 10" Click="btSave" Background="Black" Foreground="White">
                <Button.Content>
                    <TextBlock FontFamily="../Fonts/#Ledger" FontSize="15">Подтвердить</TextBlock>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
